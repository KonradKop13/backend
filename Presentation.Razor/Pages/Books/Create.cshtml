@page
@model Presentation.Razor.Pages.Books.CreateModel
@{
    ViewData["Title"] = "Add Book";
}
<h1>Add Book</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Book.Title"></label>
        <input asp-for="Book.Title" class="form-control" />
        <span asp-validation-for="Book.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.Author"></label>
        <input asp-for="Book.Author" class="form-control" />
        <span asp-validation-for="Book.Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Book.Year"></label>
        <input asp-for="Book.Year" class="form-control" />
        <span asp-validation-for="Book.Year" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
