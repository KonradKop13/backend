@page
@model Presentation.Razor.Pages.Movies.IndexModel
@{
    ViewData["Title"] = "Movies";
}
<h1>Movies</h1>
@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Director</th>
            <th>Year</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model.Movies)
    {
        <tr>
            <td>@movie.Id</td>
            <td>@movie.Title</td>
            <td>@movie.Director</td>
            <td>@movie.Year</td>
            <td>
                <a asp-page="Edit" asp-route-id="@movie.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-page="Delete" asp-route-id="@movie.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div class="mb-3">
    <a href="/Movies/Create" class="btn btn-success">Add Movie</a>
</div>
