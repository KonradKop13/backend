@page
@model Presentation.Razor.Pages.Games.CreateModel
@{
    ViewData["Title"] = "Add Game";
}
<h1>Add Game</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Game.Title"></label>
        <input asp-for="Game.Title" class="form-control" />
        <span asp-validation-for="Game.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Game.Developer"></label>
        <input asp-for="Game.Developer" class="form-control" />
        <span asp-validation-for="Game.Developer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Game.Year"></label>
        <input asp-for="Game.Year" class="form-control" />
        <span asp-validation-for="Game.Year" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
